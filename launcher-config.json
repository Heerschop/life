{
  "scripts": {
    "serve": [
      [
        "sleep 5 && lite-server",
        "build --watch"
      ]
    ],
    "build": [
      "clean",
      "echo ${launch_style_cyan}${launch_style_bold}src â†’ tmp${launch_style_normal}",
      "tsc --listEmittedFiles",
      [
