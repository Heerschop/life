{
  "scripts": {
    "serve": [
      "cleanup",
      "touch tmp/main.js",
      [
        "lite-server",
        "cpx            --verbose 'src/assets/**/*'  dist/assets",
        "cpx    --watch --verbose 'src/*.{html,css}' dist        $*",
        "tsc    --watch $*",
        "rollup --watch --config $*"
      ]
    ],
    "build": [
      "cleanup",
      "cpx 'src/assets/**/*'  dist/assets --verbose",
      "cpx 'src/*.{html,css}' dist        --verbose $*",
      "tsc $*",
      "rollup --config $*"
    ],
    "cleanup": [
      "rimraf dist tmp",
      "mkdir tmp"
    ]
  }
}
