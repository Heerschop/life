{
  "scripts": {
    "serve": [
      [
        "lite-server",
        "build --watch"
      ]
    ],
    "build": [
      "rimraf dist tmp",
      "mkdir tmp",
      "touch tmp/main.js",
      "cpx 'src/assets/**/*'  dist/assets --verbose",
      [
        "cpx 'src/*.{html,css}' dist        --verbose $*",
        "tsc $*",
        "bundle $*"
      ]
    ],
    "bundle": "rollup --config $*"
  }
}
